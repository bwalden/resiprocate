        stage('Windows'){
            matrix {
                axes {
                    axis {
                        name 'CONFIGURATION'
                        values 'SSL-Release'
                    }
                    axis {
                        name 'PLATFORM'
                        values 'x64'
                    }
                }
                agent {
                    dockerfile {
                        label 'Windows'
                        dir 'build/jenkins/windows'
                    }
                }
                stages {
                    stage('resip'){
                        steps {
                            bat "msbuild -m -p:Configuration=${CONFIGURATION};Platform=${PLATFORM} reSIProcate_16_0.sln"
                            dir("${PLATFORM}/${CONFIGURATION}"){
                                bat 'resip_test.exe'
                                bat 'basicCall.exe'
                            }
                        }
                    }
                    stage('reTurn'){
                        steps {
                            dir('reTurn'){
                                bat "msbuild -m -p:Configuration=${CONFIGURATION};Platform=${PLATFORM} reTurn_16_0.sln"
                                dir("${PLATFORM}/${CONFIGURATION}"){
                                    bat 'stunTestVectors.exe'
                                }
                            }
                        }
                    }
                    stage('tfm'){
                        steps {
                            dir('tfm'){
                                bat "msbuild -m -p:Configuration=${CONFIGURATION};Platform=${PLATFORM} tfm_16_0.sln"
                            }
                        }
                    }
                }
                post {
                    always {
                        recordIssues (
                            tools: [
                                msBuild()
                            ]
                        )
                    }
                    cleanup {
                        bat 'git clean -dfx'
                    }
                }
            }
        }
    }
}